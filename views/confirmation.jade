extends ./templates/main.jade

block content
  - var toPrice = 500; var fromPrice = 900;
  
  include ./templates/navbar.jade
  
  div.container
    div
      div.logo-central
      div.cofirmation-text-msg 
        | Yay! Congratulations
        br
        | Your ticket has been booked
  div.container
    div.row.confirm-ticket-box
      div.col-md-6.to-flight-info
        div.col-md-5
          div.col-md-1.logo-background
            div.confirm-box-logo1
          div.col-md-8.confirm-logo-text Wings Airlines
        div.col-md-2.to-text 02:00 NYK
        div.col-md-1.confirm-box-arrow
        div.col-md-2.from-text 05:00 CHG
        div.col-md-2.ticket-price $ #{toPrice}
      div.col-md-6.return-flight-info
        div.col-md-5
          div.col-md-1.logo-background
            div.confirm-box-logo1
          div.col-md-8.confirm-logo-text Wings Airlines
        div.col-md-2.to-text 18:00 CHG
        div.col-md-1.confirm-box-arrow
        div.col-md-2.from-text 22:00 NYK
        div.col-md-2.ticket-price $ #{fromPrice}
    div.row.thankyou-text
      | A copy of ticket is mailed to you.
      br
      | Thank you for using Wings Airlines!
  div.container
    div#p-continue1.col-sm-2.col-sm-2.col-sm-2
      button.btn.btn-warning.btn-sm.p-rectangle-5(style='margin-left:480px; margin-top:10px')
        label.p-continue Download

  div(style='height:20px')
